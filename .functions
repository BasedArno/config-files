function myll() {
	local files
	files=($(ls -F "$@"))
	for file in "$files"
	do
		echo "$file"
		local permissions=$(stat -c "%A" "$file")
		local user_and_group=$(stat -c "%U:%G" "$file")
		local timestamp=$(date -r "$file" +'%a,%b-%d-%Y')
		echo "|$file| <$permissions> $user_and_group $timestamp"
	done #| column -t
}
