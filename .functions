}

function up() {
	if [[ "$#" = 0 ]]
	then
		cd ..
		return
	fi

	input="$1"

	re='^[0-9]+$'
	if [[ "$input" =~ $re ]]
	then
		local count="$input"
		until [[ "$count" = 0 ]]
		do
			cd ..
			let count-=1
		done
	else
		local dir="$(pwd)"
		while :
		do
			if [[ "$(basename $dir)" = "$input" ]]
			then
				break
			fi
			dir="$(dirname $dir)"
		done
		cd "$dir"
	fi
}

function imv() {
	local src dst
	for src in "$@"
	do
		[[ -e $src ]] || { print -u2 "$src does not exist"; continue }
		dst=$src
		vared dst
		[[ $src != $dst ]] && mkdir -p $dst:h && mv -n $src $dst
	done
}

function qv() {
